{
  "extends": "stylelint-config-recommended",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "selector-pseudo-class-no-unknown": null,
    "at-rule-no-unknown": null,
    "max-nesting-depth": 3,
    "order/order": [
      "custom-properties",
      "declarations"
  ],
  "order/properties-alphabetical-order": true
  }
}
